{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@core/*": ["src/core/*"],
      "@config/*": ["src/config/*"],
      "@support/*": ["src/support/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "src/tests"]
}
